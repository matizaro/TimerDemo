<?xml version="1.0" encoding="utf-8"?>
<com.github.rongi.rotate_layout.layout.RotateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/divider_layout"
    android:layout_width="@dimen/ring_size"
    android:layout_height="@dimen/ring_size">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/ring_size"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal|center">

        <RadioButton
            android:id="@+id/timer_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:button="@drawable/selector_check"
            android:soundEffectsEnabled="false"
            android:checked="false"
            android:gravity="end|center_vertical"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</com.github.rongi.rotate_layout.layout.RotateLayout>